<!DOCTYPE html>
<html>
<%- include("partials/head.ejs") %>

    <body>
        <%- include("partials/navbar.ejs") %>

            <%- include("partials/header",{ title: "MY WORK" , page : "home" , clase : "bgimg-1" }) %>
                <div class="mvc-content mvc-container mvc-padding-64" id="portfolio">
                    <p class="mvc-center">
                        <em>Here are some of my latest lorem work ipsum tipsum.</em>
                    </p>
                    <br />

                    <div class="mvc-container-img mvc-row-padding mvc-center">
                        <div>
                            <img src="images/cathedral.jpg" class="mvc-img" />
                        </div>

                        <div>
                            <img src="images/road.jpg" class="mvc-img" />
                        </div>

                        <div>
                            <img src="images/european.jpg" class="mvc-img" />
                        </div>
                        <div>
                            <img src="images/bridge.jpg" class="mvc-img" />
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <footer class="mvc-center mvc-black mvc-padding-64 mvc-opacity mvc-hover-opacity-off">
                    <a href="#home" class="mvc-button mvc-light-grey"><i class="fa fa-arrow-up mvc-margin-right"></i>To
                        the
                        top</a>
                    <div class="mvc-xlarge mvc-section">
                        <i class="fa fa-facebook-official mvc-hover-opacity"></i>
                        <i class="fa fa-instagram mvc-hover-opacity"></i>
                        <i class="fa fa-snapchat mvc-hover-opacity"></i>
                        <i class="fa fa-pinterest-p mvc-hover-opacity"></i>
                        <i class="fa fa-twitter mvc-hover-opacity"></i>
                        <i class="fa fa-linkedin mvc-hover-opacity"></i>
                    </div>
                </footer>

                <script>
                    // Change style of navbar on scroll
                    window.onscroll = function () {
                        myFunction();
                    };
                    function myFunction() {
                        var navbar = document.getElementById("myNavbar");
                        if (
                            document.body.scrollTop > 100 ||
                            document.documentElement.scrollTop > 100
                        ) {
                            navbar.className =
                                "mvc-bar" + " mvc-card" + " mvc-animate-top" + " mvc-white";
                        } else {
                            navbar.className = navbar.className.replace(
                                " mvc-card mvc-animate-top mvc-white",
                                ""
                            );
                        }
                    }
                </script>
    </body>

</html>